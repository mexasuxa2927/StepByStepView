<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/cardView1"
        app:cardCornerRadius="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@id/cardView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:background="@drawable/corner_ring"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/imageSelect1"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/select_icon"
                />
            <ImageView
                android:id="@+id/imageDone1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check_done"
                android:background="@color/white"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView1"
        app:layout_constraintLeft_toRightOf="@id/cardView1"
        app:layout_constraintRight_toLeftOf="@id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:background="@drawable/corner_ring"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/imageSelect2"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/select_icon"
                />
            <ImageView
                android:id="@+id/imageDone2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check_done"
                android:background="@color/white"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="40dp"
        app:cardCornerRadius="20dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintLeft_toRightOf="@id/cardView2"
        app:layout_constraintRight_toLeftOf="@id/cardView4"
        app:layout_constraintTop_toTopOf="@+id/cardView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3"
                android:background="@drawable/corner_ring"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/imageSelect3"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/select_icon"
                />
            <ImageView
                android:id="@+id/imageDone3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check_done"
                android:background="@color/white"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="40dp"
        app:cardCornerRadius="20dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintLeft_toRightOf="@id/cardView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:background="@drawable/corner_ring"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/imageSelect4"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/select_icon"
                />
            <ImageView
                android:id="@+id/imageDone4"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check_done"
                android:background="@color/white"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/step1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dadawdadw\ndawdad"
        android:textColor="@color/color_border"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView1"
        app:layout_constraintStart_toStartOf="@+id/cardView1"
        app:layout_constraintTop_toBottomOf="@+id/cardView1"></TextView>




    <TextView
        android:id="@+id/step2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dadawdadw\ndawdad"
        android:textColor="@color/color_border"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"></TextView>

    <TextView
        android:id="@+id/step3Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dadawdadw\ndawdad"
        android:textColor="@color/color_border"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"></TextView>

    <TextView
        android:id="@+id/step4Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dadawdadw\ndawdad"
        android:textColor="@color/color_border"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"></TextView>

<!--    lines-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_border"
        android:layout_marginHorizontal="4dp"

        app:layout_constraintLeft_toRightOf="@id/cardView1"
        app:layout_constraintRight_toLeftOf="@id/cardView2"



        app:layout_constraintTop_toTopOf="@+id/cardView1"
        app:layout_constraintBottom_toBottomOf="@+id/cardView1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_border"
        android:layout_marginHorizontal="4dp"

        app:layout_constraintLeft_toRightOf="@id/cardView2"
        app:layout_constraintRight_toLeftOf="@id/cardView3"



        app:layout_constraintTop_toTopOf="@+id/cardView1"
        app:layout_constraintBottom_toBottomOf="@+id/cardView1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_border"
        android:layout_marginHorizontal="4dp"

        app:layout_constraintLeft_toRightOf="@id/cardView3"
        app:layout_constraintRight_toLeftOf="@id/cardView4"


        app:layout_constraintTop_toTopOf="@+id/cardView1"
        app:layout_constraintBottom_toBottomOf="@+id/cardView1"/>
</androidx.constraintlayout.widget.ConstraintLayout>